{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "odin run",
			"type": "process",
			"command": "odin",
			"args": [
				"run",
				"..\\${relativeFileDirname}",
				"-collection:shared=..",
				"-vet",
				"-strict-style"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": "**/*.odin"
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "odin build",
			"type": "process",
			"command": "odin",
			"args": [
				"build",
				"..\\${relativeFileDirname}",
				"-collection:shared=..",
				"-vet",
				"-strict-style"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "odin test",
			"type": "shell",
			"command": "odin",
			"args": [
				"test",
				".",
				"-collection:shared=${workspaceFolder}",
				"-vet",
				"-strict-style"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${relativeFileDirname}"
			}
		},
		{
			"label": "odin debug build",
			"type": "process",
			"command": "odin",
			"args": [
				"build",
				"..\\${relativeFileDirname}",
				"-collection:shared=..",
				"-debug"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "odin check",
			"type": "process",
			"command": "odin",
			"args": [
				"check",
				"..\\${relativeFileDirname}",
				"-collection:shared=..",
				"-no-entry-point",
				"-vet"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "odin strip semicolon",
			"type": "shell",
			"command": "odin",
			"args": [
				"strip-semicolon",
				"..\\${relativeFileDirname}",
				"-collection:shared=..",
				"-no-entry-point"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "odin doc",
			"type": "shell",
			"command": "odin",
			"args": [
				"doc",
				"..\\${relativeFileDirname}", //"-doc-format",
				"-collection:shared=..",
				">",
				"${fileDirnameBasename}.txt"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "format",
			"type": "process",
			"command": "${workspaceFolder}/ols/odinfmt.exe",
			"args": [
				"-w",
				"${workspaceFolder}\\${relativeFile}"
			],
			"problemMatcher": [],
			"group": {
				"kind": "none",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}\\${relativeFileDirname}"
			}
		}
	]
}
